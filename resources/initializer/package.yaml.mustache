name: {{ name }}
version: '0.1'
synopsis: A marvin bot
description: Please see README.md
category: Web

executables:
  {{ name }}-bot:
    source-dirs: bot
    main-is: Main.hs
    ghc-options:
    - -threaded
    - -rtsopts
    - -with-rtsopts=-N
    dependencies:
    - base
    - marvin
    - monad-logger
    default-extensions:
    - OverloadedStrings
    - MultiParamTypeClasses
    - TemplateHaskell
