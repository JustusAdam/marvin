name:           {{ name }}
version:        0.1
synopsis:       A marvin bot
description:    Please see README.md
category:       Web
build-type:     Simple
cabal-version:  >= 1.10

executable {{ name }}-bot
  main-is: Main.hs
  hs-source-dirs:
      bot
  default-extensions: OverloadedStrings MultiParamTypeClasses TemplateHaskell
  ghc-options: -threaded -rtsopts -with-rtsopts=-N
  build-depends:
      base
    , marvin
    , monad-logger
  default-language: Haskell2010
