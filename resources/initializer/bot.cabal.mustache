name:                {{ name }}
version:             0.1
synopsis:            A marvin bot
description:         Please see README.md
category:            Web
build-type:          Simple
cabal-version:       >=1.10

executable {{ name }}-bot
  hs-source-dirs:      bot
  main-is:             Main.hs
  other-modules:       MyScript
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , marvin
                     , monad-logger
  default-language:    Haskell2010
  default-extensions:  OverloadedStrings
                     , MultiParamTypeClasses
                     , TemplateHaskell
